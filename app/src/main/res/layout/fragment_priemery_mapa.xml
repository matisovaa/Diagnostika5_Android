<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.upjs.ics.diagnostika5.ActivityAFragmenty.PriemeryMapaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:text="Výpočítané koeficienty:"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <TableRow>
            <TextView
                android:text="SL:"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/stredovaLiniaTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="H/F:"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/hfTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="L/R:"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/lrTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="jin/jang:"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/jinJangTextView"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@android:color/black"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:text="@string/mapa_energetickej_asymetrie"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"/>

    <GridView
        android:id="@+id/mapaEnergetickejAsimetrieGridView"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:numColumns="4"
        />
    </LinearLayout>

</ScrollView>
